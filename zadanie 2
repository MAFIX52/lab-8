#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	const int s = 5;
	int arr[s];
	cout << "Введите элементы массивы" << endl;
	for (int i = 0; i < s; i++) 
	{
		cout << "элемент" << i + 1 << " : ";
		cin >> arr[i];

	}
	int sum = 0;
	for (int i = 0; i < s; i++)
	{
		sum += arr[i];
	}
	cout << "сумма всех элементов массива: " << sum << endl; 
	return 0;
}
